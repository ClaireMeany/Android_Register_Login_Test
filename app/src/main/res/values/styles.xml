<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_box_style">
        <item name="android:layout_width">312dp</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:background">@drawable/rounded_textbox</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:textSize">22sp</item>
    </style>

</resources>
